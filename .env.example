# ===========================================
# MTC Maris WhatsApp Chatbot Configuration
# ===========================================

# Application
NODE_ENV=development
PORT=3000
APP_NAME=MTC Maris WhatsApp Bot
APP_URL=https://your-domain.com

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mtc_maris_chatbot
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_SSL=false

# Redis (for session caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# WhatsApp Business API
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_ACCESS_TOKEN=your_access_token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_APP_SECRET=your_app_secret

# MTC Maris Core API
MARIS_API_URL=https://api.mtcmaris.com.na
MARIS_API_KEY=your_maris_api_key
MARIS_API_SECRET=your_maris_api_secret

# SMS Gateway (for OTP)
SMS_GATEWAY_URL=https://sms.mtc.com.na/api
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=MTC-Maris

# Security
JWT_SECRET=your_jwt_secret_key_min_32_chars
JWT_EXPIRES_IN=1h
ENCRYPTION_KEY=your_32_char_encryption_key_here
SESSION_TIMEOUT_MINUTES=5
MAX_PIN_ATTEMPTS=3
OTP_EXPIRY_MINUTES=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Admin Dashboard
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password
